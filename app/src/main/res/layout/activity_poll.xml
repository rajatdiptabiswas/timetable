<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.kalyan.timetable.Poll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/groupname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your group"

            />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your Username"


            />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#aaffbb"
            android:text="Submit"
            android:textColor="#000000"

            />

        <EditText
            android:id="@+id/polltitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the title of the poll" />

        <Button
            android:id="@+id/startpoll"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:backgroundTint="#0000ff"
            android:text="START POLL"

            android:textColor="#ffffff" />

        <Button
            android:id="@+id/endpoll"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:backgroundTint="#aaffbb"
            android:text="END POLL"
            android:textColor="#000000" />

        <Button
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#0000ff"
            android:text="Present Result of Polling"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poll here "
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fabpoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/fab_add"
        app:fab_colorNormal="#FFB300"
        app:fab_colorRipple="#9FA8DA"
        fab:fab_colorNormal="@color/app_primary"
        fab:fab_colorPressed="@color/app_primary_pressed"
        fab:fab_colorRipple="@color/app_ripple" />

</FrameLayout>
